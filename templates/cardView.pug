html
  head
    title card
  body
    p #{message}
    form(action="/card", method="POST")
      div
        input(name = "name")
        button(type = "submit") Create new card
    form(action="/card/remove", method="POST")
      div
        input(name = "name")
        button(type = "submit") Delete this card
    form(action="/card/update", method="POST")
      div
        label(for = "name") Existing card
        input(name = "name") 
        label(for = "newName") Wanted name
        input(name = "newName") 
        button(type = "submit") Update existing card
    div
      each card in cards
        li #{card.name}
      else
        li No cards on list
